.authform
  -overrides = {}
  -overrides[:url] = action if local_assigns.has_key? :action
  -overrides[:method] = method if local_assigns.has_key? :method
  =simple_form_for car, overrides do |f|
    =f.error_notification
    .form-inputs
      .form-group
        =f.input :description, as: :text
        =f.input :location_information, as: :text
        =f.input :lockbox_information, as: :text
    .form-actions
      =f.button :submit, class: "button"
